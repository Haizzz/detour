[Unit]
Description=Detour DNS Proxy
After=network.target

[Service]
Type=simple
ExecStart=/usr/local/bin/detour --bind 0.0.0.0 --verbose
Restart=on-failure
RestartSec=5
AmbientCapabilities=CAP_NET_BIND_SERVICE
StandardOutput=append:/var/log/detour.log
StandardError=append:/var/log/detour.log

[Install]
WantedBy=multi-user.target
